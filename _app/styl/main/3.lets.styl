#lets
	padding 190px 0
	background-color: #8F5BA7
	position relative
	&:before
	&:after
		content ''
		display block
		position: absolute
		background-image url(../img/backs/top-bg.png)
		background-repeat no-repeat
		background-position: center
		background-size: 100% 100%
		top -5px
		left 0
		right 0
		height 226px
		width 100%
	&:after
		background-image url(../img/backs/bottom-bg.png)
		top auto
		bottom:  -1px
.lets-bq
	padding 45px 80px 38px
	border: 3px dotted #fff
	color #fff
	margin 0 0 50px
	position relative
	z-index 10
	span
		font-family: ABk
.lets-text
	color #fff
	margin: 0 0 40px
	min-height 67px
	padding-left: 95px
	background-repeat no-repeat
	background-position: left top
	&&-1
		background-image url(../img/icons/lets-icon-1.png)
	&&-2
		background-image url(../img/icons/lets-icon-2.png)
	&&-3
		background-image url(../img/icons/lets-icon-3.png)
	&&-4
		background-image url(../img/icons/lets-icon-4.png)
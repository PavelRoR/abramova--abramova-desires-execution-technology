#revs
	padding 0 0 50px
.carousel
	width 100%
	max-width 650px
	margin 0 auto
.carousel-inner
	width 100%
	max-width 490px
	margin 0 auto
	border 2px dotted #672397
	.item
		img
			border-radius: 5px
			&.text-rev-img
				object-fit: contain
				object-position: center
				height 200px
				width 100%
.carousel-indicators
	position static
	margin 5px auto 0
	width 100%
	max-width 380px
	li
	.active
		width 14px
		height 14px
		background-color: transparent
		border: 2px solid #c7acda
		margin 0 7px
		transition: all .4s ease
	.active
		border 2px solid #672397
.carousel-control
	width 27px
	height 48px
	top calc(50% - 48px)
	background-position: center
	text-shadow: none
	background-color: transparent
	opacity: 1;
	&.left
		background-image url(../img/icons/prev.png)
		background-repeat no-repeat
	&.right
		background-image url(../img/icons/next.png)
		background-repeat no-repeat
	&.left
	&.right
		&:focus
			opacity 1
		&:hover
			opacity .6
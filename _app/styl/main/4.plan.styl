#plan
	padding 0 0 50px
	background-color: #FFFBFB
	background-image url(../img/backs/plan-bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
.day
	padding 44px 34px
	position relative
	margin 0 auto 55px
	border 3px solid transparent
	border-image url(../img/backs/border.png) 1 round
	min-height 154px
	&-title
		font-size: 32px
		font-family: ABk
		height 69px
		width 68px
		line-height: 66px
		background-image url(../img/backs/plan-title-bg.png)
		background-repeat no-repeat
		background-position: top center
		background-size contain
		position: absolute
		top -36px
		left 0
		right 0
		color #935BA7
		margin 0 auto
.cost
	font-size: 26px
	font-family: C
	margin-bottom: 30px
	span
		display block
		font-size: 38px
		font-family: ABk
		margin 10px 0 0
	&&-full
		span
			text-decoration: line-through
			&.unbroken
				text-decoration: none
	&&-sale
		color red
	&&-today
		color green
.timer-title
	font-size: 34px
	color red
	font-family: ABk
	margin 40px 0 0
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #4d67ac
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #4d67ac
	text-shadow: 2px 2px 2px rgba(#022a37,.6);